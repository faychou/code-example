/* pages/detail/detail.wxss */
.note {
  padding: 20px 20px 100px;
}
.note-title {
  font-size: 18px;
  font-weight: 700;
  padding-bottom: 10px;
}
.note-time {
  font-size: 14px;
  color: #666;
  font-style: italic;
}
.note-body {
  padding-top: 10px;
}

.note-foot {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-evenly;
}

.note-foot-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100px;
  font-size: 12px;
}
.foot-img {
  width: 50rpx;
  height: 50rpx;
  padding-bottom: 10rpx;
}
